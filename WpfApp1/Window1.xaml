        <Frame x:Name="Main" NavigationUIVisibility="Hidden"></Frame>
        <Grid HorizontalAlignment="Left" Height="66"   Background="DarkGray" VerticalAlignment="Top" Width="1503" Margin="0,0,-11,0">
